<h1 style="color:green;">Secret</h1>

@if (User.Identity.IsAuthenticated)
{
    <h2>Authenticated!!!</h2>

    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in User.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
        </tbody>
    </table>
}